<html 
 	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:tiles="http://tiles.apache.org/tags-tiles"
	xmlns:form="http://www.springframework.org/tags/form">  
 	
 	<jsp:output omit-xml-declaration="yes"/>  
	
	<jsp:directive.page contentType="text/html;charset=UTF-8" />  
		
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />		
		
		<c:url var="tundra_css" value="/resources/dijit/themes/tundra/tundra.css"/>	
		<link rel="stylesheet" type="text/css" href="${tundra_css}" />
			
		<c:url var="tools" value="/resources/css-framework/css/tools.css"/>
		<link rel="stylesheet" type="text/css" media="screen" href="${tools}" />
		
		<c:url var="typo" value="/resources/css-framework/css/typo.css"/>
		<link rel="stylesheet" type="text/css" media="screen" href="${typo}" />
		
		<c:url var="forms" value="/resources/css-framework/css/forms.css"/>
		<link rel="stylesheet" type="text/css" media="screen" href="${forms}" />
		
		<c:url var="layout_navtop_localleft" value="/resources/css-framework/css/layout-navtop-localleft.css" />
		<link rel="stylesheet" type="text/css" media="screen" href="${layout_navtop_localleft}" />
		
		<c:url var="layout" value="/resources/css-framework/css/layout.css"/>
		<link rel="stylesheet" type="text/css" media="screen" href="${layout}" />
			
		<c:url var="roo_css" value="/resources/styles/roo.css"/>	 
		<link rel="stylesheet" type="text/css" media="screen" href="${roo_css}" />
		
		<c:url var="dojo_js" value="/resources/dojo/dojo.js"/>
		<script src="${dojo_js}" type="text/javascript" ><!-- //required for FF3 and Opera --></script>
		
		<c:url var="spring_js" value="/resources/spring/Spring.js" />
		<script src="${spring_js}" type="text/javascript"><!-- //required for FF3 and Opera --></script>
		
		<c:url var="spring_dojo_js" value="/resources/spring/Spring-Dojo.js" />	 
		<script src="${spring_dojo_js}" type="text/javascript"><!-- //required for FF3 and Opera --></script>
			
		<script language="JavaScript" type="text/javascript">dojo.require("dojo.parser");</script>

		<title></title>
	</head>
   	<body class="tundra spring">		
  		<div id="wrap">  
		  	<div id="menu">
		    	<jsp:directive.include file="../../includes/menu.jspx"/>
		    </div>	    
	    	<div id="main">
	    		<tiles:insertAttribute name="body" />
	    		<table class="footer">
				  <tr>
				  	<c:url var="home" value="/" />
				    <td><a href="${home}">Home</a></td>				    
				    <c:if test="${not empty request.userPrincipal}">	
				    	<td align="right">			    
						    <c:url var="logout" value="/static/j_spring_security_logout" />
						    <a href="${logout}">Logout</a>
					    </td>
					</c:if>					 
				    <c:url var="logo" value="/static/images/springsource-logo.png" />
				    <td align="right"><img src="${logo}" alt="Sponsored by SpringSource"/></td>
				  </tr>
				</table>
	    	</div>
		</div>		
	</body>
</html>
