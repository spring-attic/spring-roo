<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
	<dependencies>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-bikeshed</artifactId>
			<version>2.0.999</version>
		</dependency>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-servlet</artifactId>
			<version>2.0.999</version>
		</dependency>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<version>2.0.999</version>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20090211</version>
		</dependency>
	</dependencies>
	<plugins>
		<plugin>
			<groupId>org.codehaus.mojo</groupId>
			<artifactId>gwt-maven-plugin</artifactId>
			<version>1.2</version>
			<configuration>
				<logLevel>INFO</logLevel>
				<style>PRETTY</style>
				<gwtVersion>2.0.999</gwtVersion>
				<webappDirectory>${project.build.directory}/${project.build.finalName}</webappDirectory>
				<modules>
					<module>com.springsource.extrack.gwt.ApplicationScaffold</module>
				</modules>
			</configuration>
			<executions>
				<execution>
					<goals>
						<goal>compile</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
	</plugins>
</configuration>