<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:b='urn:import:com.google.gwt.bikeshed.list.client'>
<ui:style>
   .controls table {
      display:inline;
    }
   .controls button {
      display:inline;
      margin-left:1.5em;
    }
     
 </ui:style>

 <g:HTMLPanel>
    <h3><ui:msg>${entity.pluralName}</ui:msg></h3>

    <b:CellTable ui:field='table' pageSize='8'/>

    <div class='{style.controls}'>
      <b:SimplePager addStyleNames='{style.controls}' view='{table}' location='LEFT'/>
      <g:Button addStyleNames='{style.controls}' ui:field='newButton'>New</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
