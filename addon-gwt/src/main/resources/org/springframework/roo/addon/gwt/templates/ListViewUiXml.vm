<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:b='urn:import:com.google.gwt.bikeshed.list.client'>
<ui:image field="createButton" resource="createButton.png" />

<ui:style>
   .controls {
      position: absolute;
      left:0;
      right:0;
      top:0;
      height: 2em;
      border-bottom: 1px solid #666;
      margin-left: 15em;
    }
    @sprite .createButton {
      gwt-image: 'createButton';
      border: 0;
      margin-top: 5px;
    }
    .controls table {
       position:absolute;
       right:0;
       top:0;
     }
    .controls button {
       display:inline;
     }
 </ui:style>


<g:HTMLPanel>
    <div style='height:3em;'></div>
    <b:CellTable width='100%' ui:field='table' pageSize='8'/>
    <div class='{style.controls}'>      
      <g:Button styleName='{style.createButton}' ui:field='newButton'></g:Button>
      <span style='vertical-align:bottom;'>Create ${entity.name}</span>
      <b:SimplePager view='{table}' location='RIGHT'/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
