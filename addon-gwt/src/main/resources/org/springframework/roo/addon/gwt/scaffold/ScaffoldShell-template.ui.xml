<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:a='urn:import:com.google.gwt.app.client'>

  <ui:style>
    @def contentWidth 800px;

    .disabled {
     color: gray;
    }
    
    .body {
       overflow:auto;
     }

    .banner {
       background-color: #777;
       color: #fff;
       width: 800px;
       margin-left: auto;
       margin-right: auto;
       -moz-border-radius: 10px;
       -webkit-border-radius: 10px;
       margin-top: 1.5em;
     }

    .title {
       text-align: left;
       margin-left: 1em;
     }

    .error {
       position: absolute;
       left: 12%;
       right: 12%;
       text-align: center;
       background-color: red;
    }

    .users {
     position: absolute;
     right: 0;
    }

    .centered {
      width: contentWidth;
      margin-right: auto;
      margin-left: auto;
    }

    .content {
      position: relative;
      margin-top: 2em;
      border-top: 2px solid #888;
      overflow: auto;
     }

     .entities {
       position: absolute;
       left: 0;
       top: 0;
       bottom: 0;
       width: 15em;
     }

     .entitiesList {
       border: none;
       height: 100%;
       outline: none;
       font-weight: bold;
     }

     .master {
       margin-left: 15em;
     }

     .details {
       margin-left: 15em;
     }
  </ui:style>
 
  <g:DockLayoutPanel unit='EM'>
    <g:north size='6'>
      <g:HTML styleName='{style.banner}'>
        <div class='{style.error}' ui:field='error'></div>
        <h2 class='{style.title}'>Your Entities</h2>
      </g:HTML>
    </g:north>

    <g:center>
      <g:FlowPanel styleName='{style.content} {style.centered}'>
        <g:SimplePanel styleName='{style.entities}'>
          <a:CellListPlacePickerView styleName="{style.entitiesList}" width='100%' pageSize='8' ui:field='placesBox'/>
        </g:SimplePanel>
        <g:SimplePanel styleName="{style.master}" ui:field='master'>
          <g:HTML>
            <h3>Welcome to __PROJECT_NAME__</h3>
            <span>Choose an entity set from the list on the left to get started</span>
          </g:HTML>
        </g:SimplePanel>
        <g:SimplePanel styleName="{style.master}" ui:field='details'>
        </g:SimplePanel>
      </g:FlowPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>