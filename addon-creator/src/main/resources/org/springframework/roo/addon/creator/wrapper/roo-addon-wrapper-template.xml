<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>TO_BE_CHANGED_BY_ADDON</groupId>
    <artifactId>TO_BE_CHANGED_BY_ADDON</artifactId>
    <packaging>bundle</packaging>
    <version>TO_BE_CHANGED_BY_ADDON</version>
    <name>Spring Roo - Wrapping - ${pkgArtifactId}</name>
    <description>This bundle wraps the standard Maven artifact: ${pkgArtifactId}-${pkgVersion}.</description>
    <properties>
        <pkgArtifactId>TO_BE_CHANGED_BY_ADDON</pkgArtifactId>
        <pkgVersion>TO_BE_CHANGED_BY_ADDON</pkgVersion>
        <osgiVersion>${pkgVersion}.0001</osgiVersion>
        <pkgVendor>TO_BE_CHANGED_BY_ADDON</pkgVendor>
        <pkgDocUrl></pkgDocUrl>
        <pkgLicense>TO_BE_CHANGED_BY_ADDON</pkgLicense>
        <roo.version>2.0.0.RC1</roo.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>TO_BE_CHANGED_BY_ADDON</groupId>
            <artifactId>TO_BE_CHANGED_BY_ADDON</artifactId>
            <version>TO_BE_CHANGED_BY_ADDON</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-webdav-jackrabbit</artifactId>
                <version>1.0-beta-6</version>
            </extension>
        </extensions>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.4</version>
                <extensions>true</extensions>
                <configuration>
                    <remoteOBR>true</remoteOBR>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>*;version=${project.version}</Export-Package>
                        <Bundle-Vendor>${pkgVendor} (wrapped into an OSGi bundle by the Spring Roo project build system)</Bundle-Vendor>
                        <Bundle-DocURL>${pkgDocUrl}</Bundle-DocURL>
                        <Bundle-License>${pkgLicense}</Bundle-License>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>